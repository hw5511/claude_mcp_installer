{
    "notion_py": {
        "command": "python",
        "args": ["{MCP_SCRIPTS_DIR}/notion_mcp.py"],
        "env": {
            "NOTION_API_TOKEN": "${NOTION_API_TOKEN}"
        },
        "restart_policy": {
            "max_restarts": 5,
            "restart_delay": 2000
        },
        "stdio_format": "json"
    }
} 